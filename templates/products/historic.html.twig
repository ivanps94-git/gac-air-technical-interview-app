
{% include 'base/header.html.twig' %}
{% include 'base/nav-sidebar.html.twig' %}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-3">
                            Histórico {{ entityNames[1] }} : {{ product.id }}
                        </h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive mb-3">
                    <table class="table mb-0 tbl-server-info no-footer" role="grid">
                        <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data" role="row">
                            <th class="text-left">Id</th>
                            <th class="text-left">Usuario</th>
                            <th class="text-left">Stock</th>
                            <th class="text-left">Fecha de Creación</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for h in historic %}
                            <tr>
                                <td>{{ h.id }}</td>
                                <td>{{ h.user.username }}</td>
                                <td>{{ h.stock }}</td>
                                <td>{{ h.createdAt ? h.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No hay {{ entityNames[1]}} que mostrar</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'base/footer.html.twig' %}